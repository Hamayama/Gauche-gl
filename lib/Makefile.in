.PHONY: all check clean install distclean maintainer-clean

GAUCHE_CONFIG = @GAUCHE_CONFIG@
INSTALL = @INSTALL@
INSTALL_TYPE = @INSTALL_TYPE@
SCM_INSTALL_DIR = $(DESTDIR)`$(GAUCHE_CONFIG) --$(INSTALL_TYPE)libdir`

SCMFILES = gl.scm \
	   gl/math3d.scm \
	   gl/glut.scm

CONFIG_GENERATED = Makefile

all :

check :

install :
	@if test ! -d $(SCM_INSTALL_DIR)/gl ; then \
	  $(INSTALL) -d $(SCM_INSTALL_DIR)/gl; \
	fi
	@for f in $(SCMFILES) _end; do \
	  if test $$f != _end; then \
	    $(INSTALL) -m 444 $$f $(SCM_INSTALL_DIR)/$$f; \
	  fi; \
	done

clean :
	rm -rf core *~ gl/*~

distclean : clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean : clean
	rm -rf $(CONFIG_GENERATED)

