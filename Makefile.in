CONFIG_GENERATED = Makefile config.cache config.log config.status autom4te*.cache
.PHONY: all check clean distclean install maintainer-clean


all :
	cd src; $(MAKE) all
	cd doc; $(MAKE) all

check : all
	cd src; $(MAKE) check

clean :
	rm -rf core *~
	cd src; $(MAKE) clean
	cd lib; $(MAKE) clean
	cd doc; $(MAKE) clean

distclean : clean
	cd src; $(MAKE) distclean
	cd lib; $(MAKE) distclean
	cd doc; $(MAKE) distclean
	rm -rf $(CONFIG_GENERATED)

install :
	cd src; $(MAKE) install
	cd lib; $(MAKE) install
	cd doc; $(MAKE) install

maintainer-clean : clean
	cd src; $(MAKE) maintainer-clean
	cd lib; $(MAKE) maintainer-clean
	cd doc; $(MAKE) maintainer-clean
	rm -rf configure VERSION $(CONFIG_GENERATED)

